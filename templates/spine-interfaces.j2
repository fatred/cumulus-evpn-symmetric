auto lo
iface lo inet loopback
    address {{ loopback_prefix_base }}.{{ spine_id }}/32

auto mgmt
iface mgmt
    vrf-table auto
    address 127.0.0.1/8
    address ::1/128

auto eth0
iface eth0 inet dhcp
    vrf mgmt

auto swp1
iface swp1
    alias leaf1

auto swp2
iface swp2
    alias leaf2

auto swp3
iface swp3
    alias service1

auto swp4
iface swp4
    alias service2

